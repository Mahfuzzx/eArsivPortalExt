{
    "manifest_version": 3,
    "name": "e-Arşiv Portal Geliştirmeleri",
    "version": "1.2",
    "description": "e-Arşiv Portal sayfasına bazı özellikler ekleyen eklenti.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://earsivportal.efatura.gov.tr/*"
            ],
            "js": [
                "jquery.min.js",
                "userfunctions.js",
                "musterilerfunctions.js",
                "usernotefunctions.js",
                "yaziile.js",
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}